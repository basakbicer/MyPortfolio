@model List<MyPortfolio.DAL.Entities.Login>
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kullanıcı İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bilgileriniz</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hesabınızla ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz. 
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kullanıcı Adı</th>
									<th scope="col">Şifre</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.loginId</td>
										<td>@item.loginName</td>
										<td>@item.password</td>
										<td><a href="/Login/UpdateLogin/@item.loginId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



